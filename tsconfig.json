{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "es2016",                                  
    "module": "commonjs",                                                                   
    "allowJs": true,   
    "rootDir": "./src",                               
    "outDir": "./dist",   
    "moduleResolution": "node",    
    "types": ["node", "jest"],                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  // "exclude": ["node_modules", "tests/**/*"]
}
